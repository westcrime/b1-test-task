@model IEnumerable<Task2.Models.UploadedFile>

@{
    ViewData["Title"] = "Uploaded Files";
}

<h1>Uploaded Files</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Upload Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>@file.UploadDate.ToString("g")</td>
                    <td><a href="@Url.Action("ViewFile", "Home", new { id = file.Id })">Просмотреть файл</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files have been uploaded yet.</p>
}

<hr />

<h2>Upload a New File</h2>
<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Choose file to upload</label>
        <input type="file" class="form-control" name="file" id="file" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Upload</button>
</form>
